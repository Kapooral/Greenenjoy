{% extends 'GreenenjoyCoreBundle::back_layout.html.twig' %}
	
	{% block content %}

	<div class="col-lg-6">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				<p>{{ message }}</p>
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				{{ message }}
			</div>
		{% endfor %}
		<div class="row mb-5">
			<div class="col-12">
				<h3 class="py-3 border-bottom">Modifier mes informations</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-12">

				{{ form_start(form) }}
				{{ form_errors(form) }}

				<div class="form-group my-2">
					{{ form_label(form.username) }}
					{{ form_errors(form.username) }}
					{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group my-2">
					{{ form_label(form.instagram) }}
					{{ form_errors(form.instagram) }}
					{{ form_widget(form.instagram, {'attr': {'class': 'form-control'}}) }}
				</div>
				{% for email in form.email %}
				<div class="form-group my-2">
					{{ form_label(email) }}
					{{ form_errors(email) }}
					{{ form_widget(email, {'attr': {'class': 'form-control'}}) }}
				</div>
				{% endfor %}
				{% for password in form.password %}
				<div class="form-group my-2">
					{{ form_label(password) }}
					{{ form_errors(password) }}
					{{ form_widget(password, {'attr': {'class': 'form-control'}}) }}
				</div>
				{% endfor %}
				<div class="form-group my-2">
					{{ form_label(form.current_password) }}
					{{ form_errors(form.current_password) }}
					{{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
				</div>

				{{ form_rest(form) }}

				<button type="submit" class="btn btn-outline-info d-block my-4 my-lg-5 mx-auto">Enregistrer</button>

				{{ form_end(form) }}
			</div>
		</div>
	</div>

	{% endblock %}