{% extends 'GreenenjoyCoreBundle::back_layout.html.twig' %}

	{% block content %}

		<div class="col-lg-6">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<p>{{ message }}</p>
				</div>
			{% endfor %}
			{% for message in app.flashes('error') %}
				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			<div class="row mb-5">
				<div class="col-12">
					<h3 class="py-3 border-bottom">Réinitialisation de mot de passe</h3>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 mb-5 mb-md-4">
					{{ form_start(form) }}
					{{ form_errors(form) }}

					{% for eachPwd in form.password %}
						<div class="form-group">
							{{ form_label(eachPwd) }} <span style="color: red; font-size: 20px;">*</span>
							{{ form_errors(eachPwd) }}
							{{ form_widget(eachPwd, {'attr': {'class': 'form-control'}}) }}
						</div>
					{% endfor %}
					<input type="hidden" name="email" id="email" value="{{ email }}">
					<input type="submit" class="btn btn-outline-info d-block mx-auto mt-4" value="Réinitialiser" />
					{{ form_rest(form) }}
				</div>
			</div>
		</div>
	{% endblock %}