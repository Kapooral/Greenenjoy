{% extends 'GreenenjoyCoreBundle::back_layout.html.twig' %}

	{% block content %}

		<div class="col-lg-6">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<p>{{ message }}</p>
				</div>
			{% endfor %}
			{% for message in app.flashes('error') %}
				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					{{ message }}
				</div>
			{% endfor %}
			<div class="row mb-5">
				<div class="col-12">
					<h3 class="py-3 border-bottom">Réinitialisation de mot de passe</h3>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 mb-5 mb-md-4">
					<form action="{{ path('greenenjoy_recovery') }}" method="post">
						<div class="form-group">
							<label for="email">Adresse e-mail</label>
							<input class="form-control" type="email" id="email" name="email" autocomplete="off" value="mbenguia.husseini@live.fr" required />
						</div>
						<input type="hidden" id="ts_naobundle_user__token" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
						<button type="submit" class="btn btn-outline-info d-block mx-auto">Réinitialiser</button>
					</form>
				</div>
			</div>
		</div>
	{% endblock %}
